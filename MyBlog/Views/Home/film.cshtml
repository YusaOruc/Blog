@using MyBlog.Models.Siniflar
@model List<Cinema>


<section class="portfolio">
    <div class="container">

        <div class="row portfolio-container" data-aos="fade-up" data-aos-easing="ease-in-out" data-aos-duration="500">
            @foreach(var i in Model)
            {
                <div class="col-lg-3 col-md-6 portfolio-wrap filter-app">
                <div class="portfolio-item">
                    <a href="/Film/FilmDetay/@i.ID"><img src="@i.İmgCinema" class="img-fluid" alt="" style="height:400px;"></a>
                    <div class="portfolio-info">
                        
                        <div>
                           <a href="/Film/FilmDetay/@i.ID" title="Portfolio Details"><i class="bx bx-link"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            }
            
        </div>

    </div>
</section>

<main id="main">

    <!-- ======= Our Portfolio Section ======= -->
    <section class="breadcrumbs" style="margin-bottom:-30px;margin-top:-180px;background:#d2e4ed;">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2><strong>Film Önerileri</strong></h2>
                <ol>
                    <li><a href="/Film/Index/">All see</a></li>
                    
                </ol>
            </div>

        </div>
    </section><!-- End Our Portfolio Section -->
</main>