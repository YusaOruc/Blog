@model MyBlog.Models.Siniflar.iletisim
@{
    ViewBag.Title = "iletisimGsayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<p style="margin-top:-20px;"><a href="/iletisimAdmin/Index/">İletişim</a> / İletişim Güncelle</p>
@using (Html.BeginForm("iletisimGuncelle", "iletisimAdmin", FormMethod.Post))
{
    @Html.LabelFor(x => x.ID)
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readonly" })
    <br />
    @Html.LabelFor(x => x.Adres)
    @Html.TextBoxFor(x => x.Adres, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Mail)
    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Telefon)
    @Html.TextBoxFor(x => x.Telefon, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.mapLink)
    @Html.TextBoxFor(x => x.mapLink, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Güncelle</button>
}
