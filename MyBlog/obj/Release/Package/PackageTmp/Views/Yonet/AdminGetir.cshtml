@model MyBlog.Models.Siniflar.Admin
@{
    ViewBag.Title = "AdminGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<p style="margin-top:-20px;"><a href="/Yonet/Index/">Admin</a> / Admin Güncelle</p>
@using (Html.BeginForm("AdminGuncelle", "Yonet", FormMethod.Post))
{
    @Html.LabelFor(x => x.ID)
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control",@readonly="readonly" })
    <br />
    @Html.LabelFor(x => x.Kullanici)
    @Html.TextBoxFor(x => x.Kullanici, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Sifre)
    @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Güncelle</button>
}
